#Just a basic FK chain example
#FK CHAIN
import maya.cmds as cmds
#Creating Joints
cmds.select(cl=1)
shoulder_JNT=cmds.joint ( p=[0,5,0], n= 'Shoulder_Joint')
elbow_JNT= cmds.joint( p=[5,5,0], n="Elbow_Joint")
wrist_JNT=cmds.joint(p=[10,5,0],n="Wrist_Joint")

JointList = shoulder_JNT,elbow_JNT,wrist_JNT

ctrlGrpList=[]
ctrlList=[]

for i in JointList:
    name = i.replace('_Joint','')
    ctrl = cmds.circle(n=(name+'_Ctrl'),ch=0)
    cmds.delete(cmds.parentConstraint(i,ctrl))
    cmds.parentConstraint(ctrl,i)
    ctrlgroup = cmds.group(ctrl,n=(name+'_Group'))
    ctrlList.append(ctrl)
    ctrlGrpList.append(ctrlgroup)


noofjnts=len(ctrlGrpList)

for i in range(0,noofjnts):
    try:
        cmds.parent(ctrlGrpList[i+1],ctrlList[i])
    except:
        pass
    
    

    
    









